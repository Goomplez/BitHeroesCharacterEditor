<UserControl x:Class="BitHeroesCharacterEditor.View.EquipmentSection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BitHeroesCharacterEditor.View"
             xmlns:vm="clr-namespace:BitHeroesCharacterEditor.ViewModel"
             d:DataContext="{d:DesignInstance Type=vm:StatsSectionViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../StyleDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Button Name="Mainhand"
                Grid.Column="0"
                Grid.Row="0"
                Style="{StaticResource EquipmentButton}"
                Command="{Binding Command}">
            Mainhand
        </Button>

        <Button Name="Offhand"
                Grid.Column="0"
                Grid.Row="1"
                Style="{StaticResource EquipmentButton}">
            Offhand
        </Button>

        <Button Name="Head"
                Grid.Column="0"
                Grid.Row="2"
                Style="{StaticResource EquipmentButton}">
            Head
        </Button>

        <Button Name="Body"
                Grid.Column="0"
                Grid.Row="3"
                Style="{StaticResource EquipmentButton}">
            Body
        </Button>

        <Button Name="Neck"
                Grid.Column="2"
                Grid.Row="0"
                Style="{StaticResource EquipmentButton}">
            Neck
        </Button>
        <Button Name="Finger"
                Grid.Column="2"
                Grid.Row="1"
                Style="{StaticResource EquipmentButton}">
            Finger
        </Button>

        <Button Name="Accessory"
                Grid.Column="2"
                Grid.Row="2"
                Style="{StaticResource EquipmentButton}">
            Accessory
        </Button>

        <Button Name="Pet"
                Grid.Column="2"
                Grid.Row="3"
                Style="{StaticResource EquipmentButton}">
            Pet
        </Button>

        <StackPanel Name="MiddleSection"
                    Grid.Column="1"
                    Grid.Row="0"
                    Grid.RowSpan="3">
            
        </StackPanel>
    </Grid>
</UserControl>